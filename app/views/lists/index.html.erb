  </div>

  <div class="row">
    <div class="col-sm-1 col-md-12">
      <div class="d-flex justify-content-right">
        <% @lists.each do |list| %>
          <div class="card mr-4">
            <div class="card-body">
              <h2 class="card-title"><%= list.name %></h5>
              <div>
                <%= link_to 'Enter', list, class:"btn btn-primary"%>
                <%= link_to 'Delete', list, class:"btn btn-primary", method: :delete, data: { confirm: 'Are you sure?' } %>
